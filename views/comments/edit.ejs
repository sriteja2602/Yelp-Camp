<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center">Edit Comment </h1>
    <div class="row">
        
        <div style="width: 70%; margin: 25px auto;">
            <form class="ui form" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                
                <div class="field">
                  
                  <input type="text" name="comment[text]" value="<%= comment.text %>" required="required">
                </div>
                <div class="field" style="text-align: center;">
                    <button class="ui primary basic button">Update Comment</button>
                </div>
                
                
              </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>



<%- include("../partials/footer") %>