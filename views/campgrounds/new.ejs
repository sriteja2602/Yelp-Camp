<%- include("../partials/header") %>



<div class="container">
    <h1 style="text-align: center;">Create A Campground</h1>
    <div class="row">
        
        <div style="width: 70%; margin: 40px auto;">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Campground Name" required="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Campground ImageUrl" required="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Describe the Campground Image" required="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" min="500.00" step="100.00" required="required">
                </div>
                <div class="field">
                    <div class="ui checkbox">
                      <input type="checkbox" tabindex="0" class="hidden" required="register">
                      <label>I agree to the Terms and Conditions</label>
                    </div>
                <div class="form-group" style="text-align: center;">
                    <button  class="ui positive basic button">Submit Campground</button> 
                </div>
                
            </form>   
                  
            
            <a href="/campgrounds">Go back!</a>
        </div>
        <script>
            $('.ui.checkbox')
                    .checkbox();
        </script>
    </div>
</div>



<%- include("../partials/footer") %>